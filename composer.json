{
    "name": "ecphp/eu-login-bundle",
    "description": "A bundle for Symfony 4 & 5, providing authentication against European Commission authentication service.",
    "license": "BSD-3-Clause",
    "type": "symfony-bundle",
    "keywords": [
        "authentication",
        "cas",
        "central authentication service",
        "eulogin",
        "european commission",
        "single sign-on",
        "sso"
    ],
    "require": {
        "php": ">= 7.1.3",
        "ext-json": "*",
        "ext-simplexml": "*",
        "ecphp/cas-bundle": "1.1.*",
        "ecphp/ecas": "2.1.*",
        "symfony/dependency-injection": "^4.4",
        "symfony/framework-bundle": "^4.4"
    },
    "require-dev": {
        "drupol/php-conventions": "^1.7.2 || ^1.8.18",
        "friends-of-phpspec/phpspec-code-coverage": "^4.3.2",
        "infection/infection": "^0.13.6 || ^0.15.3",
        "phpspec/phpspec": "^5.1.2 || ^6.2.1",
        "vimeo/psalm": "^3.14"
    },
    "autoload": {
        "psr-4": {
            "EcPhp\\EuLoginBundle\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpro/grumphp": true,
            "phpstan/extension-installer": true,
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "grumphp": "./vendor/bin/grumphp run"
    }
}
